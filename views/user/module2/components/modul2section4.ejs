<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Goal Setter - Tujuan Nabung Interaktif</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            color: white;
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .header p {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        .main-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }

        .goal-form {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            backdrop-filter: blur(10px);
        }

        .goal-form h2 {
            color: #333;
            margin-bottom: 20px;
            font-size: 1.8rem;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #555;
            font-weight: 600;
        }

        .form-group input, .form-group select, .form-group textarea {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .form-group input:focus, .form-group select:focus, .form-group textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

        .btn-secondary {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            margin-top: 10px;
        }

        .btn-secondary:hover {
            box-shadow: 0 10px 20px rgba(255, 107, 107, 0.3);
        }

        .goal-visualization {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            backdrop-filter: blur(10px);
        }

        .goal-card {
            background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
            color: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
            position: relative;
            overflow: hidden;
        }

        .goal-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: shimmer 3s ease-in-out infinite;
        }

        @keyframes shimmer {
            0%, 100% { transform: translateX(-100%) translateY(-100%); }
            50% { transform: translateX(0) translateY(0); }
        }

        .goal-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .goal-amount {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .progress-container {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 25px;
            height: 20px;
            margin-bottom: 15px;
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, #00b894, #00a085);
            border-radius: 25px;
            transition: width 1s ease-in-out;
            position: relative;
        }

        .progress-bar::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            animation: progress-shine 2s ease-in-out infinite;
        }

        @keyframes progress-shine {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        .goal-stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-top: 15px;
        }

        .stat-item {
            text-align: center;
            background: rgba(255, 255, 255, 0.1);
            padding: 10px;
            border-radius: 10px;
        }

        .stat-value {
            font-size: 1.2rem;
            font-weight: bold;
        }

        .stat-label {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .goals-list {
            margin-top: 30px;
        }

        .goals-list h3 {
            color: #333;
            margin-bottom: 20px;
            font-size: 1.5rem;
        }

        .goal-item {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 15px;
            border-left: 5px solid #667eea;
            transition: all 0.3s ease;
        }

        .goal-item:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .goal-item-header {
            display: flex;
            justify-content: between;
            align-items: center;
            margin-bottom: 10px;
        }

        .goal-item-title {
            font-weight: bold;
            color: #333;
            font-size: 1.1rem;
        }

        .goal-item-amount {
            color: #667eea;
            font-weight: bold;
        }

        .goal-item-progress {
            background: #e9ecef;
            border-radius: 10px;
            height: 8px;
            margin: 10px 0;
        }

        .goal-item-progress-bar {
            height: 100%;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 10px;
            transition: width 0.5s ease;
        }

        .delete-btn {
            background: #ff6b6b;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 12px;
            transition: all 0.3s ease;
        }

        .delete-btn:hover {
            background: #ee5a24;
            transform: scale(1.05);
        }

        .inspiration-gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .inspiration-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .inspiration-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        }

        .inspiration-icon {
            font-size: 3rem;
            margin-bottom: 15px;
        }

        .inspiration-title {
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .inspiration-desc {
            color: #666;
            font-size: 0.9rem;
        }

        .cache-controls {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 20px;
            margin-top: 20px;
            text-align: center;
        }

        .cache-controls h3 {
            color: #333;
            margin-bottom: 15px;
        }

        @media (max-width: 768px) {
            .main-content {
                grid-template-columns: 1fr;
            }
            
            .header h1 {
                font-size: 2rem;
            }
            
            .inspiration-gallery {
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            }
        }

        .celebration {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: linear-gradient(135deg, #00b894, #00a085);
            color: white;
            padding: 30px;
            border-radius: 20px;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            z-index: 1000;
            display: none;
        }

        .celebration.show {
            display: block;
            animation: celebrationBounce 0.6s ease-out;
        }

        @keyframes celebrationBounce {
            0% { transform: translate(-50%, -50%) scale(0.5); opacity: 0; }
            50% { transform: translate(-50%, -50%) scale(1.1); }
            100% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üéØ Goal Setter Interaktif</h1>
            <p>Wujudkan impian dengan perencanaan yang tepat!</p>
        </div>

        <div class="main-content">
            <div class="goal-form">
                <h2>üìù Buat Tujuan Baru</h2>
                <form id="goalForm">
                    <div class="form-group">
                        <label for="goalTitle">Nama Tujuan</label>
                        <input type="text" id="goalTitle" placeholder="Contoh: Beli Motor Baru" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="goalAmount">Target Jumlah (Rp)</label>
                        <input type="number" id="goalAmount" placeholder="50000000" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="currentAmount">Tabungan Saat Ini (Rp)</label>
                        <input type="number" id="currentAmount" placeholder="5000000" value="0">
                    </div>
                    
                    <div class="form-group">
                        <label for="deadline">Target Waktu</label>
                        <input type="date" id="deadline" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="category">Kategori</label>
                        <select id="category" required>
                            <option value="">Pilih Kategori</option>
                            <option value="kendaraan">üèçÔ∏è Kendaraan</option>
                            <option value="rumah">üè† Rumah</option>
                            <option value="pendidikan">üéì Pendidikan</option>
                            <option value="liburan">‚úàÔ∏è Liburan</option>
                            <option value="gadget">üì± Gadget</option>
                            <option value="investasi">üí∞ Investasi</option>
                            <option value="lainnya">üì¶ Lainnya</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="description">Deskripsi (Opsional)</label>
                        <textarea id="description" rows="3" placeholder="Ceritakan mengapa tujuan ini penting bagi Anda..."></textarea>
                    </div>
                    
                    <button type="submit" class="btn">üöÄ Buat Tujuan</button>
                </form>
            </div>

            <div class="goal-visualization">
                <h2>üìä Visualisasi Progress</h2>
                <div id="currentGoalView">
                    <div class="goal-card" style="background: linear-gradient(135deg, #ddd 0%, #bbb 100%);">
                        <div class="goal-title">Belum ada tujuan</div>
                        <div class="goal-amount">Buat tujuan pertama Anda!</div>
                        <div class="progress-container">
                            <div class="progress-bar" style="width: 0%;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="goals-list">
            <h3>üìã Daftar Tujuan Anda</h3>
            <div id="goalsList">
                <p style="text-align: center; color: #666; font-style: italic;">Belum ada tujuan yang dibuat</p>
            </div>
        </div>

        <div class="cache-controls">
            <h3>üóëÔ∏è Pengaturan Data</h3>
            <button class="btn btn-secondary" onclick="clearAllData()">Hapus Semua Data</button>
            <p style="margin-top: 10px; color: #666; font-size: 0.9rem;">
                Menghapus semua tujuan dan data yang tersimpan
            </p>
        </div>

        <div class="inspiration-gallery">
            <div class="inspiration-card">
                <div class="inspiration-icon">üèçÔ∏è</div>
                <div class="inspiration-title">Motor Impian</div>
                <div class="inspiration-desc">Kebebasan berkeliling dengan kendaraan sendiri</div>
            </div>
            
            <div class="inspiration-card">
                <div class="inspiration-icon">üè†</div>
                <div class="inspiration-title">Rumah Idaman</div>
                <div class="inspiration-desc">Tempat berlindung yang nyaman untuk keluarga</div>
            </div>
            
            <div class="inspiration-card">
                <div class="inspiration-icon">üéì</div>
                <div class="inspiration-title">Pendidikan</div>
                <div class="inspiration-desc">Investasi terbaik untuk masa depan</div>
            </div>
            
            <div class="inspiration-card">
                <div class="inspiration-icon">‚úàÔ∏è</div>
                <div class="inspiration-title">Liburan</div>
                <div class="inspiration-desc">Refreshing dan menciptakan kenangan indah</div>
            </div>
            
            <div class="inspiration-card">
                <div class="inspiration-icon">üí∞</div>
                <div class="inspiration-title">Dana Darurat</div>
                <div class="inspiration-desc">Perlindungan finansial untuk situasi tak terduga</div>
            </div>
            
            <div class="inspiration-card">
                <div class="inspiration-icon">üì±</div>
                <div class="inspiration-title">Gadget Baru</div>
                <div class="inspiration-desc">Teknologi terbaru untuk produktivitas</div>
            </div>
        </div>
    </div>

    <div class="celebration" id="celebration">
        <h2>üéâ Selamat!</h2>
        <p>Tujuan baru telah berhasil dibuat!</p>
        <p>Mari mulai menabung untuk mewujudkannya!</p>
    </div>

    <script>
        let goals = [];
        let currentGoalIndex = 0;

        // Load data from memory
        function loadGoals() {
            // In a real application, this would load from localStorage
            // But since we can't use localStorage, we'll keep data in memory
            displayGoals();
            displayCurrentGoal();
        }

        // Save goals (placeholder for actual storage)
        function saveGoals() {
            // In a real application, this would save to localStorage
            // For now, data persists in memory during the session
        }

        // Format currency
        function formatCurrency(amount) {
            return new Intl.NumberFormat('id-ID', {
                style: 'currency',
                currency: 'IDR',
                minimumFractionDigits: 0
            }).format(amount);
        }

        // Calculate days until deadline
        function calculateDaysLeft(deadline) {
            const today = new Date();
            const targetDate = new Date(deadline);
            const diffTime = targetDate - today;
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            return diffDays;
        }

        // Display current goal
        function displayCurrentGoal() {
            const currentGoalView = document.getElementById('currentGoalView');
            
            if (goals.length === 0) {
                currentGoalView.innerHTML = `
                    <div class="goal-card" style="background: linear-gradient(135deg, #ddd 0%, #bbb 100%);">
                        <div class="goal-title">Belum ada tujuan</div>
                        <div class="goal-amount">Buat tujuan pertama Anda!</div>
                        <div class="progress-container">
                            <div class="progress-bar" style="width: 0%;"></div>
                        </div>
                    </div>
                `;
                return;
            }

            const goal = goals[currentGoalIndex];
            const progress = (goal.currentAmount / goal.targetAmount) * 100;
            const daysLeft = calculateDaysLeft(goal.deadline);
            const remaining = goal.targetAmount - goal.currentAmount;

            currentGoalView.innerHTML = `
                <div class="goal-card">
                    <div class="goal-title">${goal.title}</div>
                    <div class="goal-amount">${formatCurrency(goal.targetAmount)}</div>
                    <div class="progress-container">
                        <div class="progress-bar" style="width: ${Math.min(progress, 100)}%;"></div>
                    </div>
                    <div class="goal-stats">
                        <div class="stat-item">
                            <div class="stat-value">${progress.toFixed(1)}%</div>
                            <div class="stat-label">Progress</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">${daysLeft}</div>
                            <div class="stat-label">Hari Tersisa</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">${formatCurrency(goal.currentAmount)}</div>
                            <div class="stat-label">Terkumpul</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">${formatCurrency(remaining)}</div>
                            <div class="stat-label">Kekurangan</div>
                        </div>
                    </div>
                </div>
            `;

            // Cycle through goals every 5 seconds
            if (goals.length > 1) {
                setTimeout(() => {
                    currentGoalIndex = (currentGoalIndex + 1) % goals.length;
                    displayCurrentGoal();
                }, 5000);
            }
        }

        // Display all goals
        function displayGoals() {
            const goalsList = document.getElementById('goalsList');
            
            if (goals.length === 0) {
                goalsList.innerHTML = '<p style="text-align: center; color: #666; font-style: italic;">Belum ada tujuan yang dibuat</p>';
                return;
            }

            goalsList.innerHTML = goals.map((goal, index) => {
                const progress = (goal.currentAmount / goal.targetAmount) * 100;
                const daysLeft = calculateDaysLeft(goal.deadline);
                
                return `
                    <div class="goal-item">
                        <div class="goal-item-header">
                            <div>
                                <div class="goal-item-title">${goal.title}</div>
                                <div class="goal-item-amount">${formatCurrency(goal.targetAmount)}</div>
                            </div>
                            <button class="delete-btn" onclick="deleteGoal(${index})">Hapus</button>
                        </div>
                        <div class="goal-item-progress">
                            <div class="goal-item-progress-bar" style="width: ${Math.min(progress, 100)}%;"></div>
                        </div>
                        <div style="display: flex; justify-content: space-between; font-size: 0.9rem; color: #666; margin-top: 5px;">
                            <span>${progress.toFixed(1)}% tercapai</span>
                            <span>${daysLeft} hari tersisa</span>
                        </div>
                        ${goal.description ? `<p style="margin-top: 10px; font-size: 0.9rem; color: #666;">${goal.description}</p>` : ''}
                    </div>
                `;
            }).join('');
        }

        // Add new goal
        function addGoal(goalData) {
            goals.push({
                id: Date.now(),
                title: goalData.title,
                targetAmount: parseInt(goalData.targetAmount),
                currentAmount: parseInt(goalData.currentAmount) || 0,
                deadline: goalData.deadline,
                category: goalData.category,
                description: goalData.description,
                createdAt: new Date().toISOString()
            });
            
            saveGoals();
            displayGoals();
            displayCurrentGoal();
            
            // Show celebration
            showCelebration();
        }

        // Delete goal
        function deleteGoal(index) {
            if (confirm('Apakah Anda yakin ingin menghapus tujuan ini?')) {
                goals.splice(index, 1);
                if (currentGoalIndex >= goals.length) {
                    currentGoalIndex = 0;
                }
                saveGoals();
                displayGoals();
                displayCurrentGoal();
            }
        }

        // Clear all data
        function clearAllData() {
            if (confirm('Apakah Anda yakin ingin menghapus SEMUA data? Tindakan ini tidak dapat dibatalkan.')) {
                goals = [];
                currentGoalIndex = 0;
                saveGoals();
                displayGoals();
                displayCurrentGoal();
                alert('Semua data berhasil dihapus!');
            }
        }

        // Show celebration animation
        function showCelebration() {
            const celebration = document.getElementById('celebration');
            celebration.classList.add('show');
            
            setTimeout(() => {
                celebration.classList.remove('show');
            }, 3000);
        }

        // Form submission
        document.getElementById('goalForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                title: document.getElementById('goalTitle').value,
                targetAmount: document.getElementById('goalAmount').value,
                currentAmount: document.getElementById('currentAmount').value,
                deadline: document.getElementById('deadline').value,
                category: document.getElementById('category').value,
                description: document.getElementById('description').value
            };
            
            addGoal(formData);
            
            // Reset form
            this.reset();
        });

        // Set minimum date to today
        document.getElementById('deadline').min = new Date().toISOString().split('T')[0];

        // Initialize app
        loadGoals();
    </script>
</body>
</html>