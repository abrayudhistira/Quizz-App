<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Kuis Interaktif</title>
  <style>
    :root {
      --putih: #fff;
      --kuning: #ffe44d;
      --navy: #232343;
      --ungu: #6559ff;
      --hitam: #0f0f0f;
    }
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      font-family: 'Poppins', Arial, sans-serif;
      background: var(--ungu);
      color: var(--hitam);
      width: 100vw;
      min-height: 100vh;
      box-sizing: border-box;
    }
    .ultra-container {
      min-height: 100vh;
      min-width: 100vw;
      width: 100vw;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      box-sizing: border-box;
    }
    .quiz-group {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .top-nav-row,
    .middle-container,
    .main-container {
      width: 1100px;
      max-width: 95vw;
      margin-left: 0;
      margin-right: 0;
      padding-left: 0;
      padding-right: 0;
      box-sizing: border-box;
    }
    .top-nav-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 32px;
    }
    .nav-btn {
      background: var(--putih);
      color: var(--hitam);
      border: none;
      border-radius: 32px;
      padding: 16px 48px;
      font-size: 1.1rem;
      font-weight: 500;
      cursor: pointer;
      box-shadow: 0 2px 8px rgba(101, 89, 255, 0.10);
      transition: background 0.2s;
    }
    .nav-btn:active {
      background: #f1f1f1;
    }
    .nav-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    .title-badge {
      background: var(--kuning);
      color: var(--navy);
      border-radius: 32px;
      padding: 16px 48px;
      font-weight: 700;
      font-size: 1.1rem;
      border: none;
      box-shadow: 0 2px 8px rgba(101, 89, 255, 0.10);
      letter-spacing: 0.5px;
    }
    .middle-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 32px;
    }
    .quiz-question {
      color: var(--putih);
      font-size: 2.6rem;
      font-weight: bold;
      margin-bottom: 0;
      margin-top: 0;
      text-align: center;
      letter-spacing: 0.5px;
      line-height: 1.2;
    }
    .main-container {
      background: var(--kuning);
      border-radius: 40px;
      box-shadow: 0 8px 32px rgba(101, 89, 255, 0.15);
      padding: 50px 0 50px 0;
      display: flex;
      flex-direction: column;
      gap: 22px;
      align-items: stretch;
    }
    .option-list {
      display: flex;
      flex-direction: column;
      gap: 22px;
    }
    .option-item {
      border-radius: 32px;
      overflow: hidden;
    }
    .option-label {
      margin: 0 20px 0 20px;
      display: flex;
      align-items: center;
      background: var(--putih);
      color: var(--hitam);
      border-radius: 32px;
      padding: 22px 36px;
      font-size: 1.22rem;
      font-weight: 500;
      cursor: pointer;
      border: none;
      transition: background 0.2s, color 0.2s, border 0.2s;
      position: relative;
      box-shadow: 0 2px 8px rgba(101, 89, 255, 0.03);
      gap: 16px;
    }
    .option-label.selected {
      background: var(--navy);
      color: var(--putih);
    }
    .option-label input[type="radio"] {
      accent-color: var(--ungu);
      margin-right: 18px;
      width: 24px;
      height: 24px;
      cursor: pointer;
      appearance: none;
      border: 3px solid var(--ungu);
      border-radius: 50%;
      background: var(--putih);
      outline: none;
      position: relative;
      transition: border 0.2s;
      display: inline-block;
    }
    .option-label.selected input[type="radio"] {
      border: 8px solid var(--putih);
      background: var(--navy);
      box-shadow: 0 0 0 4px var(--navy);
    }
    .option-label.selected::before {
      content: 'âœ”';
      font-size: 1.2rem;
      color: var(--putih);
      background: var(--navy);
      border-radius: 50%;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      position: absolute;
      left: 18px;
      top: 50%;
      transform: translateY(-50%);
      z-index: 2;
    }
    .option-label.selected input[type="radio"] {
      visibility: hidden;
    }
    .option-label.selected span {
      margin-left: 28px;
    }
    /* Hasil */
    .result-screen {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      margin-top: 0;
      width: 100vw;
    }
    .badge-img {
      width: 180px;
      height: 180px;
      margin-bottom: 24px;
      display: block;
    }
    .score-title {
      color: var(--putih);
      font-size: 2.5rem;
      font-weight: bold;
      margin-bottom: 10px;
      text-align: center;
      letter-spacing: 0.5px;
    }
    .score-point {
      background: var(--kuning);
      color: var(--navy);
      font-size: 2rem;
      font-weight: 700;
      border-radius: 32px;
      padding: 16px 48px;
      margin-bottom: 24px;
      text-align: center;
      letter-spacing: 1px;
      box-shadow: 0 2px 8px rgba(101, 89, 255, 0.10);
      display: inline-block;
    }
    .score-detail {
      color: var(--putih);
      font-size: 1.2rem;
      margin-bottom: 32px;
      text-align: center;
    }
    .result-btn-group {
      display: flex;
      gap: 16px;
      margin-top: 8px;
      flex-wrap: wrap;
      justify-content: center;
    }
    .result-btn {
      background: var(--putih);
      color: var(--hitam);
      border: none;
      border-radius: 32px;
      padding: 16px 48px;
      font-size: 1.1rem;
      font-weight: 500;
      cursor: pointer;
      margin: 0 12px;
      box-shadow: 0 2px 8px rgba(101, 89, 255, 0.10);
      transition: background 0.2s;
    }
    .result-btn:active {
      background: #f1f1f1;
    }
    .result-btn-tantangan {
      background: var(--kuning);
      color: var(--navy);
      font-weight: 700;
    }
    .result-btn-tantangan:active {
      background: #ffe44d;
    }
    /* Modal Tantangan */
    #tantangan-modal {
      display: none;
      position: fixed;
      top: 0; left: 0;
      width: 100vw; height: 100vh;
      background: rgba(0,0,0,0.35);
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }
    #tantangan-modal .modal-card {
      background: var(--putih);
      color: var(--navy);
      border-radius: 32px;
      padding: 40px 32px;
      box-shadow: 0 4px 32px rgba(101,89,255,0.18);
      min-width: 320px;
      max-width: 90vw;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 18px;
    }
    #tantangan-modal .modal-card h2 {
      margin-top: 0;
      margin-bottom: 8px;
      font-size: 1.6rem;
      font-weight: 700;
    }
    #tantangan-modal .modal-card p {
      margin: 0 0 12px 0;
      color: var(--navy);
      font-size: 1.13rem;
    }
    #tantangan-modal .modal-card .modal-btn {
      background: var(--kuning);
      color: var(--navy);
      font-weight: 700;
      border: none;
      border-radius: 32px;
      padding: 16px 48px;
      font-size: 1.1rem;
      margin-top: 12px;
      cursor: pointer;
      box-shadow: 0 2px 8px rgba(101, 89, 255, 0.10);
      transition: background 0.2s;
    }
    #tantangan-modal .modal-card .modal-btn:active {
      background: #ffe44d;
    }
    #tantangan-modal .modal-card .modal-cancel {
      background: none;
      color: var(--ungu);
      border: none;
      font-size: 1rem;
      margin-top: 8px;
      cursor: pointer;
      font-weight: 500;
      text-decoration: underline;
    }
    @media (max-width: 1200px) {
      .main-container,
      .top-nav-row,
      .middle-container {
        width: 98vw;
        min-width: 0;
        max-width: 98vw;
        padding-left: 0;
        padding-right: 0;
      }
      .main-container {
        padding: 28px 0;
        border-radius: 18px;
      }
    }
    @media (max-width: 700px) {
      .main-container,
      .top-nav-row,
      .middle-container {
        width: 100vw;
        padding-left: 0;
        padding-right: 0;
      }
      .main-container {
        padding: 12px 0;
        border-radius: 12px;
      }
      .quiz-question {
        font-size: 1.2rem;
      }
      .option-label {
        font-size: 1rem;
        padding: 12px 12px;
        border-radius: 18px;
      }
      .option-label.selected::before {
        width: 22px;
        height: 22px;
        font-size: 1rem;
        left: 10px;
      }
      .option-label.selected span {
        margin-left: 18px;
      }
      .title-badge {
        padding: 10px 10px;
        font-size: 1rem;
      }
      .nav-btn {
        padding: 10px 10px;
        font-size: 1rem;
      }
      .badge-img {
        width: 110px;
        height: 110px;
      }
      .score-title {
        font-size: 1.3rem;
      }
      .score-point {
        font-size: 1.2rem;
        padding: 10px 20px;
      }
      .result-btn {
        padding: 10px 18px;
        font-size: 1rem;
      }
      #tantangan-modal .modal-card {
        padding: 18px 8px;
        border-radius: 18px;
        min-width: 0;
        font-size: 1rem;
      }
      #tantangan-modal .modal-card h2 {
        font-size: 1.1rem;
      }
      #tantangan-modal .modal-card .modal-btn {
        padding: 10px 20px;
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="ultra-container">
    <div class="quiz-group" id="quiz-container">
      <!-- Top Navigation -->
      <div class="top-nav-row" id="nav-row">
        <button class="nav-btn" id="prev-btn">Kembali</button>
        <div class="title-badge" id="quiz-title">Modul 2: Tabungan itu Gaya Hidup Bukan Paksaan</div>
        <button class="nav-btn" id="next-btn">Next</button>
      </div>
      <!-- Middle: Judul Soal -->
      <div class="middle-container" id="middle-container">
        <div class="quiz-question" id="question-text"></div>
      </div>
      <!-- Main Container (Options) -->
      <div class="main-container" id="main-container">
        <div class="option-list" id="option-list"></div>
      </div>
    </div>
    <!-- Hasil (hidden by default) -->
    <div class="result-screen" id="result-screen" style="display:none;">
      <div class="score-title" id="score-title">Skor Kamu</div>
      <div class="score-point" id="score-point"></div>
      <div class="score-detail" id="score-detail"></div>
      <div class="result-btn-group">
        <button class="result-btn" onclick="window.location.href='/module/2'">Back to Modul</button>
        <button class="result-btn" onclick="window.location.reload()">Ulangi Quiz</button>
        <button class="result-btn result-btn-tantangan" onclick="window.location.href='/tantangan/3'">Next to Tantangan 3</button>
      </div>
    </div>
  </div>
  <!-- Modal Tantangan -->
  <div id="tantangan-modal">
    <div class="modal-card">
      <h2>Tantangan Selanjutnya!</h2>
      <p>Siap untuk tantangan berikutnya?<br>Klik lanjut untuk mulai tantangan!</p>
      <button class="modal-btn" onclick="window.location.href='/tantangan/2'">Lanjut ke Tantangan</button>
      <button class="modal-cancel" onclick="closeTantanganModal()">Batal</button>
    </div>
  </div>
  <script>
    // Soal & Jawaban untuk Modul 2
    const questions = [
      {
        question: "Mitos yang salah tentang menabung adalah...",
        options: [
          "Menabung harus jumlah besar",
          "Menabung butuh disiplin tinggi",
          "Menabung membantu mencapai tujuan",
          "Menabung memberikan rasa aman",
          "Menabung adalah investasi masa depan"
        ],
        answer: 0
      },
      {
        question: "Konsep micro-saving yang paling mudah diterapkan adalah...",
        options: [
          "Menabung 50% dari uang jajan",
          "Menabung uang kembalian setiap hari",
          "Menabung hanya saat dapat uang lebih",
          "Menabung minimal 100 ribu per bulan",
          "Menabung hanya untuk barang mahal"
        ],
        answer: 1
      },
      {
        question: "Tujuan menabung yang paling efektif adalah yang bersifat...",
        options: [
          "Abstrak dan umum",
          "Spesifik, terukur, dan ada deadline",
          "Jangka panjang saja",
          "Ditentukan oleh orang lain",
          "Fleksibel tanpa target"
        ],
        answer: 1
      },
      {
        question: "Cara membuat kebiasaan menabung menjadi gaya hidup adalah...",
        options: [
          "Memaksa diri menabung dalam jumlah besar",
          "Menabung hanya saat mood baik",
          "Mulai dengan jumlah kecil tapi konsisten",
          "Menabung hanya untuk hal-hal besar",
          "Menabung tanpa tujuan yang jelas"
        ],
        answer: 2
      },
      {
        question: "Manfaat psikologis dari menabung adalah...",
        options: [
          "Dapat memamerkan jumlah tabungan",
          "Merasa lebih superior dari teman",
          "Memberikan rasa kontrol dan keamanan finansial",
          "Menghindari tanggung jawab",
          "Dapat membeli barang mewah"
        ],
        answer: 2
      }
    ];

    let currentQuestion = 0;
    let userAnswers = new Array(questions.length).fill(null);
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    const questionText = document.getElementById('question-text');
    const optionList = document.getElementById('option-list');
    const quizContainer = document.getElementById('quiz-container');
    const resultScreen = document.getElementById('result-screen');
    const scorePoint = document.getElementById('score-point');
    const scoreDetail = document.getElementById('score-detail');

    function renderQuestion(index) {
      questionText.textContent = questions[index].question;
      let html = '';
      questions[index].options.forEach((opt, i) => {
        const isSelected = userAnswers[index] === i ? 'selected' : '';
        html += `
        <div class="option-item">
          <label class="option-label ${isSelected}">
            <input type="radio" name="quiz${index}" ${userAnswers[index] === i ? 'checked' : ''} value="${i}">
            <span>${opt}</span>
          </label>
        </div>`;
      });
      optionList.innerHTML = html;
      
      document.querySelectorAll('.option-label input[type="radio"]').forEach((el, idx) => {
        el.addEventListener('change', () => {
          userAnswers[index] = idx;
          renderQuestion(index);
        });
      });
      
      prevBtn.disabled = index === 0;
      nextBtn.disabled = userAnswers[index] === null;
      nextBtn.textContent = index === questions.length - 1 ? "Selesai" : "Next";
    }

    prevBtn.addEventListener('click', () => {
      if (currentQuestion > 0) {
        currentQuestion--;
        renderQuestion(currentQuestion);
      }
    });

    function showResult() {
      quizContainer.style.display = "none";
      resultScreen.style.display = "flex";
      let benar = 0;
      userAnswers.forEach((ans, i) => {
        if (ans === questions[i].answer) benar++;
      });
      let poin = benar * 20;
      scorePoint.textContent = poin + " Poin";
      scoreDetail.textContent = `${benar} dari ${questions.length} jawaban benar.`;

      // Kirim POST ke backend
      fetch('/quiz/2/complete', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          score: poin,
          correct: benar,
          total: questions.length,
          answers: userAnswers
        })
      }).catch(err => {
        console.error('Gagal mengirim hasil:', err);
      });
    }

    nextBtn.addEventListener('click', () => {
      if (currentQuestion < questions.length - 1) {
        currentQuestion++;
        renderQuestion(currentQuestion);
      } else {
        showResult();
      }
    });

    // function showResult() {
    //   quizContainer.style.display = "none";
    //   resultScreen.style.display = "flex";
    //   let benar = 0;
    //   userAnswers.forEach((ans, i) => {
    //     if (ans === questions[i].answer) benar++;
    //   });
    //   let poin = benar * 20;
    //   scorePoint.textContent = poin + " Poin";
    //   scoreDetail.textContent = `${benar} dari ${questions.length} jawaban benar.`;
    // }

    // Modal Tantangan
    function openTantanganModal() {
      document.getElementById('tantangan-modal').style.display = 'flex';
    }

    function closeTantanganModal() {
      document.getElementById('tantangan-modal').style.display = 'none';
    }

    renderQuestion(currentQuestion);
  </script>
</body>
</html>