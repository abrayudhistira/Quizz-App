        .result-tips li {
            margin-bottom: 8px;
            position: relative;
            padding-left: 20px;
        }
        
        .result-tips li:before {
            content: "✓";
            color: #8a4fff;
            font-weight: bold;
            position: absolute;
            left: 0;
        }
        
        .restart-btn {
            background-color: #666;
            color: white;
            border: none;
            padding: 12px 25px;
            font-size: 1rem;
            border-radius: 25px;
            cursor: pointer;
            margin-top: 20px;
            transition: all 0.3s ease;
        }
        
        .restart-btn:hover {
            background-color: #555;
            transform: translateY(-2px);
        }
        
        .question-number {
            color: #8a4fff;
            font-size: 0.9rem;
            margin-bottom: 10px;
        }
        
        footer {
            margin-top: 30px;
            text-align: center;
            color: #666;
            font-size: 0.9rem;
        }
        
        @media (max-width: 768px) {
            .spender-types {
                grid-template-columns: 1fr;
            }
            
            h1 {
                font-size: 2rem;
            }
            
            .result-character {
                width: 120px;
                height: 120px;
            }
            
            .result-character svg {
                width: 90px;
                height: 90px;
            }
            
            .main-content {
                padding: 20px;
            }
        }
    </style>
