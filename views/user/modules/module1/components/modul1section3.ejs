    <script>
        const questions = [
            {
                question: "Ketika melihat barang yang kamu suka di toko, apa yang kamu lakukan?",
                options: [
                    { text: "Langsung beli! Takut kehabisan atau berubah pikiran", value: "impulse" },
                    { text: "Foto dulu, share ke teman-teman buat minta pendapat", value: "social" },
                    { text: "Pikir dulu, cek harga di tempat lain, baru putuskan", value: "saver" }
                ]
            },
            {
                question: "Bagaimana cara kamu menghabiskan weekend?",
                options: [
                    { text: "Window shopping di mall, sering pulang bawa barang", value: "impulse" },
                    { text: "Nongkrong di cafe atau tempat hits bareng teman-teman", value: "social" },
                    { text: "Aktivitas murah meriah atau gratis, kayak main di taman", value: "saver" }
                ]
            },
            {
                question: "Reaksi kamu saat ada promo atau diskon besar-besaran?",
                options: [
                    { text: "Excited banget! Langsung cek dan beli yang diinginkan", value: "impulse" },
                    { text: "Share info promo ke teman-teman, ajak belanja bareng", value: "social" },
                    { text: "Cek dulu apakah benar-benar butuh barangnya", value: "saver" }
                ]
            },
            {
                question: "Kalau teman mengajak makan di tempat mahal, kamu...",
                options: [
                    { text: "Ikut aja, nanti mikir soal uangnya belakangan", value: "impulse" },
                    { text: "Pasti ikut! Gak mau ketinggalan momen bareng teman", value: "social" },
                    { text: "Coba nego tempat yang lebih terjangkau atau masak bareng", value: "saver" }
                ]
            },
            {
                question: "Seberapa sering kamu cek saldo atau uang kamu?",
                options: [
                    { text: "Jarang, biasanya baru cek kalau mau beli sesuatu", value: "impulse" },
                    { text: "Kadang-kadang, terutama setelah hangout sama teman", value: "social" },
                    { text: "Rutin banget, bahkan punya catatan pengeluaran", value: "saver" }
                ]
            }
        ];
        
        let currentQuestion = 0;
        let answers = [];
        
        // Character SVGs for results
        const characterSVGs = {
            impulse: `<svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                <circle cx="100" cy="70" r="50" fill="#FFD6D6" />
                <circle cx="80" cy="60" r="5" fill="#333" />
                <circle cx="120" cy="60" r="5" fill="#333" />
                <path d="M70 90 Q100 110 130 90" stroke="#333" stroke-width="3" fill="none" />
                <path d="M50 40 Q60 20 80 30" stroke="#FF6B6B" stroke-width="4" fill="none" />
                <path d="M150 40 Q140 20 120 30" stroke="#FF6B6B" stroke-width="4" fill="none" />
                <rect x="70" y="130" width="60" height="60" fill="#FF6B6B" rx="5" />
                <rect x="85" y="120" width="30" height="15" fill="#FFD6D6" />
                <circle cx="60" cy="100" r="8" fill="#FFD166" />
                <circle cx="140" cy="100" r="8" fill="#FFD166" />
                <text x="100" y="105" text-anchor="middle" font-size="12" fill="#333">💳</text>
            </svg>`,
            social: `<svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                <circle cx="100" cy="70" r="50" fill="#B6EFE7" />
                <circle cx="80" cy="60" r="5" fill="#333" />
                <circle cx="120" cy="60" r="5" fill="#333" />
                <path d="M80 80 Q100 90 120 80" stroke="#333" stroke-width="3" fill="none" />
                <rect x="70" y="130" width="60" height="60" fill="#4ECDC4" rx="5" />
                <rect x="85" y="120" width="30" height="15" fill="#B6EFE7" />
                <circle cx="60" cy="50" r="12" fill="#4ECDC4" />
                <circle cx="140" cy="50" r="12" fill="#4ECDC4" />
                <circle cx="50" cy="80" r="8" fill="#4ECDC4" />
                <circle cx="150" cy="80" r="8" fill="#4ECDC4" />
                <text x="100" y="105" text-anchor="middle" font-size="12" fill="#333">☕</text>
            </svg>`,
            saver: `<svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                <circle cx="100" cy="70" r="50" fill="#C8E6FF" />
                <circle cx="80" cy="60" r="5" fill="#333" />
                <circle cx="120" cy="60" r="5" fill="#333" />
                <path d="M80 85 Q100 75 120 85" stroke="#333" stroke-width="3" fill="none" />
                <rect x="70" y="130" width="60" height="60" fill="#45B7D1" rx="5" />
                <rect x="85" y="120" width="30" height="15" fill="#C8E6FF" />
                <circle cx="100" cy="40" r="15" fill="#FFD166" />
                <text x="100" y="45" text-anchor="middle" font-size="12" fill="#333">💰</text>
                <rect x="60" y="90" width="20" height="15" fill="#45B7D1" rx="3" />
                <rect x="120" y="90" width="20" height="15" fill="#45B7D1" rx="3" />
            </svg>`
        };
        
        function startQuiz() {
            document.getElementById('characterSection').style.display = 'none';
            document.getElementById('quizSection').style.display = 'block';
            showQuestion(0);
        }
        
        function showQuestion(index) {
            const question = questions[index];
            const container = document.getElementById('questionContainer');
            const questionNumber = document.getElementById('questionNumber');
            const progressFill = document.getElementById('progressFill');
            
            // Update progress
            const progress = ((index + 1) / questions.length) * 100;
            progressFill.style.width = progress + '%';
            questionNumber.textContent = `Pertanyaan ${index + 1} dari ${questions.length}`;
            
            // Show question
            container.innerHTML = `
                <h3>${question.question}</h3>
                <div class="options">
                    ${question.options.map((option, i) => `
                        <label class="option">
                            <input type="radio" name="currentAnswer" value="${option.value}" onchange="enableNavigation()">
                            ${option.text}
                        </label>
                    `).join('')}
                </div>
            `;
            
            // Update navigation buttons
            document.getElementById('prevBtn').disabled = index === 0;
            document.getElementById('nextBtn').disabled = true;
            
            // Change next button text for last question
            const nextBtn = document.getElementById('nextBtn');
            if (index === questions.length - 1) {
                nextBtn.textContent = 'Lihat Hasil!';
            } else {
                nextBtn.textContent = 'Selanjutnya';
            }
            
            // Restore previous answer if exists
            if (answers[index]) {
                const radio = container.querySelector(`input[value="${answers[index]}"]`);
                if (radio) {
                    radio.checked = true;
                    enableNavigation();
                }
            }
        }
        
        function enableNavigation() {
            document.getElementById('nextBtn').disabled = false;
        }
        
        function nextQuestion() {
            // Save current answer
            const selectedAnswer = document.querySelector('input[name="currentAnswer"]:checked');
            if (selectedAnswer) {
                answers[currentQuestion] = selectedAnswer.value;
            }
            
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
                showQuestion(currentQuestion);
            } else {
                // Show result
                showResult();
            }
        }
        
        function previousQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                showQuestion(currentQuestion);
            }
        }
        
        function showResult() {
            // Count answers
            const answerCounts = {
                impulse: 0,
                social: 0,
                saver: 0
            };
            
            answers.forEach(answer => {
                if (answerCounts.hasOwnProperty(answer)) {
                    answerCounts[answer]++;
                }
            });
            
            // Find the type with most answers
            let resultType = 'impulse';
            let maxCount = 0;
            
            for (const [type, count] of Object.entries(answerCounts)) {
                if (count > maxCount) {
                    maxCount = count;
                    resultType = type;
                }
            }
            
            // Hide quiz, show result
            document.getElementById('quizSection').style.display = 'none';
            document.getElementById('resultSection').style.display = 'block';
            
            const resultSection = document.getElementById('resultSection');
            const resultCharacter = document.getElementById('resultCharacter');
            const resultTitle = document.getElementById('resultTitle');
            const resultDescription = document.getElementById('resultDescription');
            const resultTips = document.getElementById('resultTips');
            
            resultSection.className = `result-section ${resultType}`;
            resultCharacter.innerHTML = characterSVGs[resultType];
            
            switch(resultType) {
                case 'impulse':
                    resultTitle.textContent = '🛍️ Kamu Tipe Si Impulsif!';
                    resultDescription.textContent = 'Kamu suka belanja spontan dan sering tergoda sama barang-barang menarik. Tapi tenang, ini bisa diubah kok!';
                    resultTips.innerHTML = `
                        <h4>💡 Tips Khusus Buat Kamu:</h4>
                        <ul>
                            <li>Bikin list belanja sebelum keluar rumah</li>
                            <li>Tunggu 24 jam sebelum beli barang yang gak urgent</li>
                            <li>Set budget harian dan bawa uang cash sesuai budget</li>
                            <li>Unfollow akun online shop yang bikin kamu tergoda</li>
                        </ul>
                    `;
                    break;
                case 'social':
                    resultTitle.textContent = '👥 Kamu Tipe Si Sosialita!';
                    resultDescription.textContent = 'Kamu suka hangout dan gak mau ketinggalan sama teman-teman. Social life penting, tapi keuangan juga harus dijaga!';
                    resultTips.innerHTML = `
                        <h4>💡 Tips Khusus Buat Kamu:</h4>
                        <ul>
                            <li>Ajak teman untuk aktivitas yang lebih hemat kayak piknik</li>
                            <li>Giliran bayar kalau makan bareng, jangan selalu kamu</li>
                            <li>Cari tempat nongkrong yang budget-friendly</li>
                            <li>Bikin "social budget" khusus buat hangout</li>
                        </ul>
                    `;
                    break;
                case 'saver':
                    resultTitle.textContent = '💰 Kamu Tipe Si Hemat!';
                    resultDescription.textContent = 'Wow! Kamu sudah punya kebiasaan keuangan yang bagus. Terus pertahankan kebiasaan baik ini ya!';
                    resultTips.innerHTML = `
                        <h4>💡 Tips Buat Tetap Konsisten:</h4>
                        <ul>
                            <li>Tetap update catatan keuangan kamu</li>
                            <li>Sesekali reward diri sendiri biar gak bosen</li>
                            <li>Ajari teman-teman cara mengatur keuangan</li>
                            <li>Mulai investasi kecil-kecilan untuk masa depan</li>
                        </ul>
                    `;
                    break;
            }
        }
        
        function restartQuiz() {
            currentQuestion = 0;
            answers = [];
            document.getElementById('resultSection').style.display = 'none';
            document.getElementById('characterSection').style.display = 'block';
        }
    </script>
