        .quiz-navigation {
            margin-top: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .nav-btn {
            background-color: #8a4fff;
            color: white;
            border: none;
            padding: 12px 25px;
            font-size: 1rem;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: bold;
        }
        
        .nav-btn:hover {
            background-color: #7040e0;
            transform: translateY(-2px);
        }
        
        .nav-btn:disabled {
            background-color: #ccc;
            cursor: not-allowed;
