<section id="m6s4" class="w-full py-10 px-4 md:px-10 rounded-2xl">
  <!-- Judul & Deskripsi -->
  <div class="bg-[var(--putih)] rounded-3xl px-6 py-10 max-w-screen-xl mx-auto text-center">
    <h2 class="text-2xl md:text-3xl font-bold mb-4">Tips Ngejar Mimpi: Step Planner</h2>
    <p class="text-base md:text-lg text-gray-600 mb-8">
      Pecah mimpimu jadi langkah-langkah kecil yang bisa dicapai. Gunakan step planner interaktif berikut untuk mulai bergerak menuju target!
    </p>
    <!-- Interaktif Step Planner + Gambar -->
    <div class="flex flex-col md:flex-row items-center justify-center gap-8">
      <!-- Step Planner -->
      <div class="flex-1">
        <div class="bg-white rounded-xl shadow p-6 mb-4 text-left">
          <form id="step-form" class="flex gap-2 mb-4">
            <input type="text" id="step-input" class="flex-1 border rounded px-3 py-2" placeholder="Langkah kecil menuju mimpi..." maxlength="50">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Tambah Langkah</button>
          </form>
          <ol id="step-list" class="list-decimal list-inside space-y-2">
            <!-- Steps will appear here -->
          </ol>
        </div>
      </div>
      <!-- Ilustrasi Step Planner -->
      <div class="flex-1">
        
        <!-- Gambar tambahan dari source yang diberikan -->
        <img src="https://raw.githubusercontent.com/MuhammadAzmiAnshari/Apmul/main/m6s4.png" alt="Step Planner Tambahan" class="mx-auto w-56 md:w-72 rounded-xl shadow mt-4">
      </div>
    </div>
  </div>
  <script>
    const stepForm = document.getElementById('step-form');
    const stepInput = document.getElementById('step-input');
    const stepList = document.getElementById('step-list');

    function addStep(text) {
      const li = document.createElement('li');
      li.className = "flex items-center justify-between bg-blue-50 px-4 py-2 rounded-lg";
      li.innerHTML = `<span>${text}</span>
        <button type="button" class="remove-step text-red-500 hover:text-red-700 font-bold ml-4" title="Hapus">&times;</button>`;
      li.querySelector('.remove-step').onclick = () => li.remove();
      stepList.appendChild(li);
    }

    stepForm.addEventListener('submit', function(e) {
      e.preventDefault();
      const value = stepInput.value.trim();
      if (value) {
        addStep(value);
        stepInput.value = '';
      }
    });
  </script>
</section>