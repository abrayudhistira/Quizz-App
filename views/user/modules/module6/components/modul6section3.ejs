<section id="m6s3" class="w-full py-10 px-4 md:px-10 rounded-2xl">
  <!-- Judul & Deskripsi -->
  <div class="bg-[var(--putih)] rounded-3xl px-6 py-10 max-w-screen-xl mx-auto text-center">
    <h2 class="text-2xl md:text-3xl font-bold mb-4">Dream Board & Target Masa Depan</h2>
    <p class="text-base md:text-lg text-gray-600 mb-8">
      Buat vision board digitalmu sendiri! Tambahkan mimpi, target, dan visualisasikan masa depan yang ingin kamu capai.
    </p>
    <!-- Interaktif Dream Board Builder + Ilustrasi -->
    <div class="flex flex-col md:flex-row items-center justify-center gap-8">
      <!-- Dream Board Builder -->
      <div class="flex-1">
        <div class="bg-white rounded-xl shadow p-6 mb-4 text-left">
          <form id="dream-form" class="flex gap-2 mb-4">
            <input type="text" id="dream-input" class="flex-1 border rounded px-3 py-2" placeholder="Tulis mimpi atau targetmu..." maxlength="50">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Tambah</button>
          </form>
          <div id="dream-board" class="flex flex-wrap gap-3 min-h-[80px]">
            <!-- Dream items will appear here -->
          </div>
        </div>
      </div>
      <!-- Ilustrasi Dream Board -->
      <div class="flex-1 flex flex-col items-center">
        <!-- SVG Ilustrasi Vision Board -->
        <svg width="260" height="180" viewBox="0 0 260 180" fill="none" xmlns="http://www.w3.org/2000/svg" class="mx-auto w-56 md:w-72 rounded-xl shadow">
          <!-- Board background -->
          <rect x="20" y="30" width="220" height="120" rx="18" fill="#fef9c3" stroke="#fde047" stroke-width="3"/>
          <!-- Pins -->
          <circle cx="40" cy="45" r="6" fill="#f87171"/>
          <circle cx="220" cy="45" r="6" fill="#60a5fa"/>
          <!-- Notes -->
          <rect x="45" y="55" width="50" height="35" rx="6" fill="#fbbf24" stroke="#f59e42" stroke-width="2"/>
          <rect x="110" y="65" width="55" height="40" rx="6" fill="#6ee7b7" stroke="#34d399" stroke-width="2"/>
          <rect x="180" y="55" width="40" height="30" rx="6" fill="#a5b4fc" stroke="#6366f1" stroke-width="2"/>
          <!-- Doodles -->
          <ellipse cx="70" cy="120" rx="12" ry="6" fill="#fde68a" opacity="0.7"/>
          <ellipse cx="200" cy="120" rx="10" ry="5" fill="#fca5a5" opacity="0.5"/>
          <!-- Text on notes -->
          <text x="70" y="75" text-anchor="middle" font-size="11" font-weight="bold" fill="#fff">Rumah</text>
          <text x="137" y="90" text-anchor="middle" font-size="11" font-weight="bold" fill="#065f46">Karir</text>
          <text x="200" y="72" text-anchor="middle" font-size="11" font-weight="bold" fill="#312e81">Liburan</text>
        </svg>
        <p class="mt-4 text-sm text-gray-500">Ilustrasi: Vision Board Digital</p>
      </div>
    </div>
  </div>
  <script>
    const dreamForm = document.getElementById('dream-form');
    const dreamInput = document.getElementById('dream-input');
    const dreamBoard = document.getElementById('dream-board');

    function addDream(text) {
      const item = document.createElement('div');
      item.className = "bg-yellow-100 text-yellow-900 px-4 py-2 rounded-lg shadow flex items-center gap-2";
      item.innerHTML = `<span>${text}</span>
        <button type="button" class="remove-dream text-red-500 hover:text-red-700 font-bold" title="Hapus">&times;</button>`;
      item.querySelector('.remove-dream').onclick = () => item.remove();
      dreamBoard.appendChild(item);
    }

    dreamForm.addEventListener('submit', function(e) {
      e.preventDefault();
      const value = dreamInput.value.trim();
      if (value) {
        addDream(value);
        dreamInput.value = '';
      }
    });
  </script>
</section>