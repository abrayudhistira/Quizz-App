<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skenario Darurat - Video Animasi Interaktif</title>
    <style>
        :root {
            --mustard: #FFE149ff;
            --tropical-indigo: #857BE4ff;
            --white: #FFFFFFff;
            --space-cadet: #2D2C56ff;
            --space-cadet-2: #383659ff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--space-cadet) 0%, var(--space-cadet-2) 100%);
            color: var(--white);
            min-height: 100vh;
            overflow-x: hidden;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header Section */
        .header {
            text-align: center;
            margin-bottom: 40px;
            position: relative;
        }

        .header::before {
            content: '';
            position: absolute;
            top: -20px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, var(--mustard), var(--tropical-indigo));
            border-radius: 2px;
            animation: glow 2s ease-in-out infinite alternate;
        }

        @keyframes glow {
            from { box-shadow: 0 0 10px var(--mustard); }
            to { box-shadow: 0 0 20px var(--tropical-indigo); }
        }

        .main-title {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 15px;
            background: linear-gradient(45deg, var(--mustard), var(--white));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: titlePulse 3s ease-in-out infinite;
        }

        @keyframes titlePulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .subtitle {
            font-size: 1.3rem;
            color: var(--tropical-indigo);
            margin-bottom: 10px;
            font-weight: 300;
        }

        .description {
            font-size: 1.1rem;
            color: var(--white);
            opacity: 0.9;
            line-height: 1.6;
            max-width: 800px;
            margin: 0 auto;
        }

        /* Video Player Section */
        .video-section {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 40px;
            border: 2px solid rgba(255, 225, 73, 0.3);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease;
        }

        .video-section:hover {
            transform: translateY(-5px);
        }

        .video-player {
            position: relative;
            width: 100%;
            height: 500px;
            background: var(--space-cadet);
            border-radius: 15px;
            overflow: hidden;
            margin-bottom: 20px;
            border: 3px solid var(--mustard);
        }

        .video-content {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            background: linear-gradient(45deg, var(--space-cadet), var(--space-cadet-2));
        }

        .play-button {
            width: 80px;
            height: 80px;
            background: var(--mustard);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(255, 225, 73, 0.4);
            animation: playPulse 2s infinite;
        }

        .play-button:hover {
            transform: scale(1.1);
            background: var(--tropical-indigo);
        }

        @keyframes playPulse {
            0% { box-shadow: 0 0 0 0 rgba(255, 225, 73, 0.7); }
            70% { box-shadow: 0 0 0 20px rgba(255, 225, 73, 0); }
            100% { box-shadow: 0 0 0 0 rgba(255, 225, 73, 0); }
        }

        .play-icon {
            width: 0;
            height: 0;
            border-left: 25px solid var(--space-cadet);
            border-top: 15px solid transparent;
            border-bottom: 15px solid transparent;
            margin-left: 5px;
        }

        .video-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
            color: var(--mustard);
        }

        .video-desc {
            color: var(--white);
            opacity: 0.9;
            line-height: 1.6;
        }

        /* Scenario Cards */
        .scenarios-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .scenario-card {
            background: rgba(133, 123, 228, 0.1);
            border-radius: 15px;
            padding: 25px;
            border: 2px solid rgba(133, 123, 228, 0.3);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .scenario-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 225, 73, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .scenario-card:hover::before {
            left: 100%;
        }

        .scenario-card:hover {
            transform: translateY(-10px);
            border-color: var(--mustard);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

        .scenario-icon {
            width: 60px;
            height: 60px;
            background: var(--mustard);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
            font-size: 24px;
            color: var(--space-cadet);
        }

        .scenario-title {
            font-size: 1.3rem;
            font-weight: bold;
            margin-bottom: 10px;
            color: var(--white);
        }

        .scenario-text {
            color: var(--white);
            opacity: 0.9;
            line-height: 1.5;
        }

        /* Controls */
        .controls {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            padding: 25px;
            text-align: center;
            border: 1px solid rgba(255, 225, 73, 0.2);
        }

        .controls-title {
            font-size: 1.4rem;
            font-weight: bold;
            margin-bottom: 20px;
            color: var(--tropical-indigo);
        }

        .btn-group {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 25px;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .btn-primary {
            background: var(--mustard);
            color: var(--space-cadet);
        }

        .btn-secondary {
            background: var(--tropical-indigo);
            color: var(--white);
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        }

        .btn:active {
            transform: translateY(0);
        }

        /* Floating Animation Elements */
        .floating-element {
            position: absolute;
            pointer-events: none;
            opacity: 0.1;
            animation: float 6s ease-in-out infinite;
        }

        .floating-element:nth-child(1) {
            top: 10%;
            left: 10%;
            animation-delay: 0s;
        }

        .floating-element:nth-child(2) {
            top: 20%;
            right: 10%;
            animation-delay: 2s;
        }

        .floating-element:nth-child(3) {
            bottom: 10%;
            left: 15%;
            animation-delay: 4s;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(180deg); }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .main-title {
                font-size: 2.2rem;
            }

            .subtitle {
                font-size: 1.1rem;
            }

            .video-player {
                height: 300px;
            }

            .play-button {
                width: 60px;
                height: 60px;
            }

            .play-icon {
                border-left: 20px solid var(--space-cadet);
                border-top: 12px solid transparent;
                border-bottom: 12px solid transparent;
            }

            .btn-group {
                flex-direction: column;
                align-items: center;
            }

            .btn {
                width: 200px;
            }
        }

        /* Progress Bar */
        .progress-container {
            width: 100%;
            height: 6px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 3px;
            margin: 20px 0;
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, var(--mustard), var(--tropical-indigo));
            border-radius: 3px;
            width: 0%;
            transition: width 0.3s ease;
            animation: shimmer 2s infinite;
        }

        @keyframes shimmer {
            0% { background-position: -200px 0; }
            100% { background-position: 200px 0; }
        }
    </style>
</head>
<body>
    <!-- Floating Background Elements -->
    <div class="floating-element">🚨</div>
    <div class="floating-element">⚠️</div>
    <div class="floating-element">🔥</div>

    <div class="container">
        <!-- Header -->
        <header class="header">
            <h1 class="main-title">SKENARIO DARURAT</h1>
            <h2 class="subtitle">Video Animasi Interaktif</h2>
            <p class="description">
                Modul pembelajaran komprehensif untuk memahami dan merespons berbagai situasi darurat 
                melalui simulasi video animasi yang realistis dan interaktif. Dilengkapi dengan 
                panduan langkah demi langkah dan skenario yang dapat disesuaikan.
            </p>
        </header>

        <!-- Main Video Player -->
        <section class="video-section">
            <div class="video-player" id="videoPlayer">
                <div class="video-content">
                    <div class="play-button" onclick="playVideo()">
                        <div class="play-icon"></div>
                    </div>
                </div>
            </div>
            <div class="progress-container">
                <div class="progress-bar" id="progressBar"></div>
            </div>
            <h3 class="video-title">Simulasi Kebakaran Gedung Bertingkat</h3>
            <p class="video-desc">
                Video animasi 3D yang menampilkan prosedur evakuasi darurat lengkap dengan jalur evakuasi, 
                titik berkumpul, dan koordinasi tim tanggap darurat. Durasi: 8 menit 45 detik.
            </p>
        </section>

        <!-- Scenario Cards -->
        <section class="scenarios-grid">
            <div class="scenario-card">
                <div class="scenario-icon">🔥</div>
                <h4 class="scenario-title">Kebakaran</h4>
                <p class="scenario-text">
                    Simulasi lengkap prosedur evakuasi kebakaran termasuk penggunaan APAR, 
                    jalur evakuasi, dan titik berkumpul yang aman.
                </p>
            </div>

            <div class="scenario-card">
                <div class="scenario-icon">🌪️</div>
                <h4 class="scenario-title">Gempa Bumi</h4>
                <p class="scenario-text">
                    Panduan visual untuk bertindak saat gempa bumi, termasuk posisi duck-cover-hold 
                    dan langkah-langkah pasca gempa.
                </p>
            </div>

            <div class="scenario-card">
                <div class="scenario-icon">🚨</div>
                <h4 class="scenario-title">Keamanan</h4>
                <p class="scenario-text">
                    Prosedur keamanan darurat untuk berbagai ancaman, termasuk lockdown, 
                    evakuasi, dan komunikasi dengan pihak berwenang.
                </p>
            </div>

            <div class="scenario-card">
                <div class="scenario-icon">🏥</div>
                <h4 class="scenario-title">Medis</h4>
                <p class="scenario-text">
                    Pertolongan pertama dan tanggap darurat medis, termasuk CPR, 
                    penanganan luka, dan koordinasi dengan tim medis.
                </p>
            </div>
        </section>

        <!-- Controls -->
        <section class="controls">
            <h3 class="controls-title">Kontrol Simulasi</h3>
            <div class="btn-group">
                <button class="btn btn-primary" onclick="startSimulation()">
                    ▶️ Mulai Simulasi
                </button>
                <button class="btn btn-secondary" onclick="pauseSimulation()">
                    ⏸️ Jeda
                </button>
                <button class="btn btn-secondary" onclick="resetSimulation()">
                    🔄 Reset
                </button>
                <button class="btn btn-primary" onclick="showOptions()">
                    ⚙️ Pengaturan
                </button>
            </div>
        </section>
    </div>

    <script>
        let isPlaying = false;
        let currentProgress = 0;
        let progressInterval;

        function playVideo() {
            const player = document.getElementById('videoPlayer');
            const progressBar = document.getElementById('progressBar');
            
            if (!isPlaying) {
                player.innerHTML = `
                    <div class="video-content" style="background: linear-gradient(45deg, var(--space-cadet), var(--space-cadet-2)); position: relative;">
                        <div style="position: absolute; top: 20px; left: 20px; background: rgba(255, 225, 73, 0.9); color: var(--space-cadet); padding: 5px 15px; border-radius: 20px; font-weight: bold;">
                            🔴 LIVE SIMULATION
                        </div>
                        <div style="text-align: center; color: var(--white);">
                            <h3 style="color: var(--mustard); margin-bottom: 10px;">Simulasi Sedang Berjalan</h3>
                            <p>Skenario: Kebakaran Gedung Bertingkat</p>
                            <div style="margin-top: 20px; font-size: 2rem;">🔥🏢👥</div>
                        </div>
                    </div>
                `;
                
                isPlaying = true;
                startProgress();
            }
        }

        function startProgress() {
            progressInterval = setInterval(() => {
                currentProgress += 0.5;
                document.getElementById('progressBar').style.width = currentProgress + '%';
                
                if (currentProgress >= 100) {
                    clearInterval(progressInterval);
                    completeSimulation();
                }
            }, 100);
        }

        function completeSimulation() {
            const player = document.getElementById('videoPlayer');
            player.innerHTML = `
                <div class="video-content" style="background: linear-gradient(45deg, var(--tropical-indigo), var(--mustard));">
                    <div style="text-align: center; color: var(--white);">
                        <h3 style="color: var(--white); margin-bottom: 10px;">✅ Simulasi Selesai</h3>
                        <p>Evaluasi: Evakuasi Berhasil</p>
                        <div style="margin-top: 20px; font-size: 2rem;">🎉👏🏆</div>
                        <button class="btn btn-primary" onclick="resetSimulation()" style="margin-top: 20px;">
                            Ulangi Simulasi
                        </button>
                    </div>
                </div>
            `;
        }

        function startSimulation() {
            if (!isPlaying) {
                playVideo();
            }
        }

        function pauseSimulation() {
            if (progressInterval) {
                clearInterval(progressInterval);
                isPlaying = false;
            }
        }

        function resetSimulation() {
            clearInterval(progressInterval);
            currentProgress = 0;
            isPlaying = false;
            document.getElementById('progressBar').style.width = '0%';
            document.getElementById('videoPlayer').innerHTML = `
                <div class="video-content">
                    <div class="play-button" onclick="playVideo()">
                        <div class="play-icon"></div>
                    </div>
                </div>
            `;
        }

        function showOptions() {
            alert('Pengaturan:\n\n• Kecepatan Simulasi: Normal\n• Bahasa: Indonesia\n• Subtitel: Aktif\n• Kualitas: HD\n• Audio: Aktif\n\n(Fitur pengaturan akan dikembangkan lebih lanjut)');
        }

        // Auto-animate elements on page load
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.scenario-card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.animation = 'slideInUp 0.8s ease forwards';
                }, index * 200);
            });
        });

        // Add slide-in animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideInUp {
                from {
                    opacity: 0;
                    transform: translateY(30px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>