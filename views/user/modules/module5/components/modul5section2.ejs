<section id="m5s2" class="w-full py-10 px-4 md:px-10 rounded-2xl">
  <!-- Judul & Deskripsi -->
  <div class="bg-[var(--putih)] rounded-3xl px-6 py-10 max-w-screen-xl mx-auto text-center">
    <h2 class="text-2xl md:text-3xl font-bold mb-4">
      Cerita Nyata: Dana Darurat
    </h2>
    <p class="text-base md:text-lg text-gray-600 mb-8">
      Simak cerita nyata dalam format comic strip berikut, lalu pilih
      keputusanmu di setiap panel untuk melihat dampaknya!
    </p>
    <!-- Comic Strip Interaktif -->
    <div class="flex flex-col md:flex-row items-center justify-center gap-8">
      <div class="flex-1">
        <div class="bg-white rounded-xl shadow p-6 mb-4">
          <!-- Panel Comic Strip -->
          <div id="comic-panel" class="mb-4">
            <img src="https://raw.githubusercontent.com/luthfibphoenix/apmul/main/TORS.png" alt="Gambar" class="mx-auto w-64 md:w-80 rounded-xl shadow mb-4">
            <p class="mt-4 text-gray-700" id="comic-text">
              Suatu hari, Andi tiba-tiba harus membawa orang tuanya ke rumah
              sakit. Tabungan Andi hanya cukup untuk kebutuhan sehari-hari.
            </p>
          </div>
          <!-- Pilihan Interaktif -->
          <div id="comic-choices" class="flex flex-col gap-2">
            <button
              class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700"
              onclick="nextComic(1)"
            >
              Gunakan tabungan harian
            </button>
            <button
              class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700"
              onclick="nextComic(2)"
            >
              Cari pinjaman darurat
            </button>
          </div>
        </div>
      </div>
      <div class="flex-1 flex flex-col items-center">
        <!-- Ilustrasi tambahan -->
        <svg
          width="220"
          height="180"
          viewBox="0 0 220 180"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          class="mx-auto w-56 md:w-72 rounded-xl shadow"
        >
          <!-- Background comic style -->
          <rect
            x="10"
            y="20"
            width="200"
            height="140"
            rx="18"
            fill="#f1f5f9"
            stroke="#64748b"
            stroke-width="3"
          />
          <!-- Comic hospital -->
          <rect
            x="40"
            y="60"
            width="60"
            height="60"
            rx="8"
            fill="#fca5a5"
            stroke="#ef4444"
            stroke-width="2"
          />
          <rect
            x="120"
            y="70"
            width="60"
            height="50"
            rx="8"
            fill="#a5b4fc"
            stroke="#6366f1"
            stroke-width="2"
          />
          <!-- Cross sign -->
          <rect x="65" y="85" width="10" height="20" fill="#fff" />
          <rect x="60" y="92" width="20" height="10" fill="#fff" />
          <!-- Ambulance -->
          <rect
            x="135"
            y="100"
            width="30"
            height="15"
            rx="4"
            fill="#fff"
            stroke="#94a3b8"
            stroke-width="2"
          />
          <circle cx="142" cy="117" r="5" fill="#64748b" />
          <circle cx="158" cy="117" r="5" fill="#64748b" />
          <!-- Person -->
          <ellipse cx="180" cy="120" rx="7" ry="10" fill="#fbbf24" />
          <circle cx="180" cy="110" r="6" fill="#f59e42" />
          <!-- Doodles -->
          <ellipse
            cx="60"
            cy="140"
            rx="12"
            ry="6"
            fill="#fca5a5"
            opacity="0.5"
          />
          <ellipse
            cx="170"
            cy="140"
            rx="10"
            ry="5"
            fill="#a5b4fc"
            opacity="0.4"
          />
        </svg>
        <p class="mt-4 text-sm text-gray-500">
          Ilustrasi: Pentingnya Dana Darurat
        </p>
      </div>
    </div>
  </div>

  <!-- Script Interaktif Comic Strip -->
  <script>
    const comicPanels = [
      {
        img: "https://raw.githubusercontent.com/luthfibphoenix/apmul/main/TORS.png",
        text: "Suatu hari, Andi tiba-tiba harus membawa orang tuanya ke rumah sakit. Tabungan Andi hanya cukup untuk kebutuhan sehari-hari.",
        choices: [
          { label: "Gunakan tabungan harian", next: 1 },
          { label: "Cari pinjaman darurat", next: 2 },
        ],
      },
      {
        img: "https://raw.githubusercontent.com/luthfibphoenix/apmul/main/Tabungan.png",
        text: "Andi menggunakan tabungan hariannya. Setelah membayar biaya rumah sakit, Andi kesulitan memenuhi kebutuhan pokok selama sebulan.",
        choices: [{ label: "Kembali", next: 0 }],
      },
      {
        img: "https://raw.githubusercontent.com/luthfibphoenix/apmul/main/Pinjaman.png",
        text: "Andi mencari pinjaman darurat. Ia berhasil membayar biaya rumah sakit, tapi harus menanggung cicilan dan bunga di bulan berikutnya.",
        choices: [{ label: "Kembali", next: 0 }],
      },
    ];

    function nextComic(idx) {
      const panel = comicPanels[idx];
      document.getElementById("comic-panel").innerHTML = `
        <img src="${panel.img}" alt="Comic Panel" class="mx-auto w-64 md:w-80 rounded-xl shadow mb-4">
        <p class="mt-4 text-gray-700" id="comic-text">${panel.text}</p>
      `;
      document.getElementById("comic-choices").innerHTML = panel.choices
        .map(
          (choice) =>
            `<button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 mb-2" onclick="nextComic(${choice.next})">${choice.label}</button>`
        )
        .join("");
    }
  </script>
</section>
