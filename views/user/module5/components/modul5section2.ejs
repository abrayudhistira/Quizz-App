    <script>
        let currentPanel = 1;
        const totalPanels = 6;

        function updateProgress() {
            const progress = (currentPanel / totalPanels) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
        }

        function nextPanel(panelNumber) {
            // Hide current panel
            document.querySelectorAll('.story-panel').forEach(panel => {
                panel.classList.remove('active');
            });
            
            // Show target panel
            document.getElementById('panel' + panelNumber).classList.add('active');
            currentPanel = panelNumber;
            updateProgress();

            // Smooth scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function showChoice1() {
            document.querySelectorAll('.story-panel').forEach(panel => {
                panel.classList.remove('active');
            });
            
